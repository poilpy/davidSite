---

import { Image } from 'astro:assets';
import logo from '../assets/logo.png';

---

<div class="drawer">
    <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content">
        <!-- Navbar -->
        <div class="navbar w-full">
            <div class="flex-none lg:hidden">
                <label for="my-drawer-3" aria-label="open sidebar" class="btn btn-square btn-ghost">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        class="inline-block h-6 w-6 stroke-current">
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </label>
            </div>
			<div class="mx-2 px-2 flex-1 lg:mx-0 lg:text-left flex flex-col lg:flex-row items-center lg:items-start whitespace-nowrap">
				<a href="/" class="btn text-lg md:text-4xl">We Do Everything Plumbing!</a>
				<a href="tel:4152985181" class="btn text-lg md:text-3xl mt-2 lg:mt-0 lg:ml-4">Call (415)-298-5181!</a>
			</div>
			<div class="hidden flex-none lg:block">
				<ul class="menu menu-horizontal whitespace-nowrap">
				  <!-- Navbar menu content here -->
					<li><a class="button bg-orange-500 text-black px-4 py-2 rounded" href="/contact">Contact Us!</a></li>
					<li><a href="/services">Services</a></li>
					<li><a href="/about">About</a></li>
				</ul>
			</div>
        </div>
		<slot/>
    </div>
    <div class="drawer-side">
        <label for="my-drawer-3" aria-label="close sidebar" class="drawer-overlay"></label>
        <ul class="menu bg-base-200 min-h-full w-80 p-4">
            <!-- Sidebar content here -->
			<li><a class="button bg-orange-500 text-black px-4 py-2 rounded" href="/contact">Contact Us!</a></li>
			<li><a href="/services">Services</a></li>
			<li><a href="/about">About</a></li>
        </ul>
    </div>
</div>
